pipeline {
    agent any
    environment {
        DOCKER_IMAGE_NAME = 'calculator-spe-hyma'
        DOCKER_IMAGE_TAG = 'hyma'
        ANSIBLE_PLAYBOOK = '/Calculator-App-SPE/deploy.yml'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/HymaJayaram-067/Calculator.spe.git' // Explicit branch name
            }
        }

        stage('Build with Maven') {
            steps {
                script {
                    sh 'cd Calculator-App-SPE && mvn clean install'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh '''
                        cd Calculator-App-SPE
                        docker build -t $DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG .
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    sh '''
                        docker tag $DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG hyma067/$DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG
                        docker push hyma067/$DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG
                    '''
                }
            }
        }

        stage('Deploy with Ansible') {
            steps {
                script {
                    sh '''
                        ansible-playbook $ANSIBLE_PLAYBOOK
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Build, Docker image push, and deployment were successful!'
        }
        failure {
            echo 'Build, Docker image push, or deployment failed.'
        }
    }
}
