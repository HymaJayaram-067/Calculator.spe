pipeline {
    agent any
    environment {
        DOCKER_IMAGE_NAME = 'calculator-spe-hyma'
        DOCKER_IMAGE_TAG = 'hyma'
        ANSIBLE_PLAYBOOK = 'Calculator-App-SPE/deploy.yml'  // Ensure it's relative
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/HymaJayaram-067/Calculator.spe.git'
            }
        }

        stage('Build with Maven') {
            steps {
                script {
                    // Build the Maven project
                    sh 'cd Calculator-App-SPE && mvn clean install'
                    
                    // Rename the JAR file to match the one expected in Dockerfile
                    sh 'mv Calculator-App-SPE/target/Calculator-App-SPE-1.0-SNAPSHOT.jar Calculator-App-SPE/target/Calculator-SPE-MiniProject-1.0-SNAPSHOT-jar-with-dependencies.jar'
                    
                    // List the contents of the target directory to verify if JAR is renamed correctly
                    sh 'ls -la Calculator-App-SPE/target'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Debugging: Check the directory structure
                    sh 'ls -la Calculator-App-SPE'
                    sh 'ls -la Calculator-App-SPE/target'
                    
                    // Ensure the Docker build is using the correct context and that the JAR exists
                    sh '''
                        docker build -t $DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG Calculator-App-SPE
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    // Login to Docker Hub and push the Docker image
                    sh '''
                        docker login -u hyma067 -p MT2024067
                        docker tag $DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG hyma067/$DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG
                        docker push hyma067/$DOCKER_IMAGE_NAME:$DOCKER_IMAGE_TAG
                    '''
                }
            }
        }

        stage('Deploy with Ansible') {
            steps {
                script {
                    // Run Ansible playbook to deploy the Docker container locally
                    sh '''
                        ansible-playbook $WORKSPACE/$ANSIBLE_PLAYBOOK
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Build, Docker image push, and deployment were successful!'
        }
        failure {
            echo 'Build, Docker image push, or deployment failed.'
        }
    }
}
